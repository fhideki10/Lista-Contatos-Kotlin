<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
            android:layout_width="414dp"
            android:layout_height="60dp"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
            android:layout_width="62dp"
            android:layout_height="45dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/voltar"
            android:background="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.102" app:layout_constraintHorizontal_bias="0.074"/>

    <TextView
            android:layout_width="259dp"
            android:layout_height="43dp"
            android:textSize="60px"
            android:text="Adicionando contato"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.101"/>

    <EditText
            android:layout_width="359dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19"
            android:id="@+id/nomeTxt"/>

    <EditText
            android:layout_width="359dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:hint="E-mail"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.277"
            android:id="@+id/emailTxt"/>

    <EditText
            android:layout_width="359dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:hint="Celular"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.366"
            android:id="@+id/celularTxt"/>

    <EditText
            android:layout_width="189dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="Digite seu CEP"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.455"
            android:id="@+id/cepTxt" app:layout_constraintHorizontal_bias="0.117"/>

    <EditText
            android:layout_width="358dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:hint="Logradouro"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.552"
            android:id="@+id/logradouroTxt" app:layout_constraintHorizontal_bias="0.509"/>

    <Button
            android:text="Pesquisar Cep"
            android:layout_width="143dp"
            android:layout_height="41dp"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.902"
            app:layout_constraintVertical_bias="0.456"/>


</android.support.constraint.ConstraintLayout>